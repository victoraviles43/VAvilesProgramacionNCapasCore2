@model ML.Empresa
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAll</h1>




<div class="row">
    <div class="col-md-6">
        <h5>Seleccione + para registrar una nuevo empleado.</h5>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div style="float:right;">

            @Html.ActionLink("+", "Form", "Empresa", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <br> <br />
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-responsive">
            <thead class="thead-dark">
                <tr>
                    <td>Editar</td>
                   
                    <td>Nombre</td>
                    <td>Telefono</td>
                    <td>Email</td>
                    <td>Direccion WEb</td>
                    <td>Logo</td>
                 
          

                    <td>Eliminar</td>
                </tr>
            </thead>
            <tbody>

                @foreach (ML.Empresa empresa in Model.Empresas)
                {
                    <tr>
                        <td><a class="btn btn-warning  bi bi-pencil-fill" href="@Url.Action("Form", "Empresa", new { IdEmpresa = empresa.IdEmpresa })"></a></td>

                        
                        <td>@empresa.Nombre </td>
                         <td>@empresa.Telefono</td>
                        <td>@empresa.Email</td>
                        <td>@empresa.DireccionWeb</td>

                        <td>  @if(@empresa.Logo != null)
                            {
                                <img  class="card-img" src= "data:image/*;base64,@empresa.Logo" style="height: 165px; width: 150px; "/>
                            }else
                            {
                                <img class="card-img" src="~/Imagenes/sinimagen.png" style=" height:150px; width:150px;"/>
                            }
                        </td>
                 
                      
                     
                        <td><a class="btn btn-danger bi bi-x-circle-fill" href="@Url.Action("Delete", "Empresa", new { IdEmpresa = empresa.IdEmpresa})" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

</div>